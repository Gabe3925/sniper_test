              <li><%= link_to "Log out", logout_path, method: "delete" %></li>
            </ul>
          </li>
          <li><a href="#"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Logged-in.</a></li>

        <% else %>

          <li><%= link_to "Log in", login_path %></li>
          <li><a href="#"><span class="glyphicon glyphicon-cloud" aria-hidden="true"></span> Not Currently Logged-In.</a></li>

        <% end %>

      </ul>
    </nav>
