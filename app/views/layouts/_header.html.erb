<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Sniper------*", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Pricing", pricing_path %></li>
        <li><%= link_to "Strategy", strategy_path %></li>
        <li><%= link_to "What is a bidder bot?", about_path %></li>
             
        <% if logged_in? %>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Users", users_path %></li>
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Edit Settings", edit_user_path(current_user) %></li>
